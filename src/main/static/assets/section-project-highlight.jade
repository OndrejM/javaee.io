section(ng-controller="ProjectHighlightController", class="javaee-project-highlight")
    .javaee-background
    .javaee-project-highlight-content
        .javaee-cms
            .javaee-title
                div
                    img(ng-src="data:image/png;base64,{{highligtedProject.icon}}")
                    div
                h2 {{highligtedProject.friendlyName ? highligtedProject.friendlyName : highligtedProject.name}}
            div(ng-bind-html="highligtedProject.description", class="javaee-content")
            .javaee-buttons
                a(href="projects/{{highligtedProject.name}}") Learn more
                a(href="projects") All projects
        .javaee-project-highlight-image
            img(ng-src="rest/images/project/snapshot/{{highligtedProject.name}}")

