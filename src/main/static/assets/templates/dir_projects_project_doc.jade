div
  .side-bar
    .contributors
      h1 Cool people that helped make this happen
      div
        eeio-contributor-summary(ng-repeat="contributor in project.detail.contributors | orderBy:'contributions':true", login="contributor.login")
    .resources
      h1 External resources
      div
        p(ng-show="project.detail.info.name")
          a(ng-href="https://github.com/{{project.detail.info.name}}", target="_blank") Source Code
        p(ng-repeat="resource in project.detail.info.resources")
          a(ng-href="{{resource.url}}", target="_blank") {{resource.title ? resource.title : resource.url}}
    .related(ng-show="project.detail.info.related")
      h1 Related projects
      div
        p(ng-repeat="related in project.detail.info.related")
          a(ng-href="project/{{related.name}}/{{related.home ? related.home : 'README.adoc'}}") {{related.friendlyName ? related.friendlyName : related.name}}
  .content(ng-bind-html="project.doc")
