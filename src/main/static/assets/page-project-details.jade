div(ng-controller="ProjectDetailsController", class="javaee-project-details")
    include header-project-details
    section
        div(ng-bind-html="project.documentation", class="javaee-content")
        .javaee-sidebar
            .javaee-releases
                h4 releases & documentation
                div.javaee-releases
                    table
                        tbody
                            tr
                                th release
                                th doc
                            tr(ng-repeat="tag in project.tags")
                                td {{tag}}
                                td
                                    a(href="https://github.com/jcpevangelists/{{project.name}}/tree/{{tag}}") ref
                div.javaee-separator
                    div
                div.javaee-github-links
                    a(href="/projects/documentation/{{project.name}}") doc
                    span ,
                    a(href="https://github.com/jcpevangelists/{{project.name}}") source code
                    span.javaee-and and
                    a(href="https://github.com/jcpevangelists/{{project.name}}/issues") issue tracker
            div(ng-bind-html="project.toc", class="javaee-content-toc", ng-show="project.toc")
            .javaee-contributors
                h4 Cool people that helped make this happen
                .javaee-contributors-list
                    a(ng-repeat="contributor in project.contributors", href="https://github.com/{{contributor.login}}/")
                        img(ng-src="{{contributor.avatarUrl}}")
            .javaee-other-projects
                h4 Other projects
                article(ng-repeat="project in otherProjects")
                    a(href="projects/{{project.name}}")
                        img(ng-src="data:image/png;base64,{{project.icon}}")
                        div
                            h4 {{project.friendlyName ? project.friendlyName : project.name}}
            include section-share-with-friends
include footer
